<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/left_horizontal_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/layout_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95">

            <TextView
                android:layout_marginLeft="@dimen/layout_margin"
                android:text="@string/sort_by"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="top|center"
            android:src="@drawable/ic_close_grey" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.2dp"
        android:background="@android:color/darker_gray" />

    <RadioGroup
        android:id="@+id/radio_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_recommended"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_arrivals"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_low_to_high"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_high_to_low"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_a_to_z"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_z_to_a"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="@dimen/layout_margin"/>

    </RadioGroup>

</LinearLayout>